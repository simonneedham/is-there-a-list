@model IsThereAList.Models.EditListViewModel

@{
    ViewBag.Title = "Edit List";
}

<br/>
<h2>@ViewBag.Title</h2>
<hr/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.EditableList.ListId)

        <div class="form-group">
            @Html.LabelFor(model => model.NewListTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NewListTypeId", new SelectList(Model.ListTypes, "ListTypeId", "Name"), String.Empty)
                @Html.ValidationMessageFor(model => model.NewListTypeId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to My Lists", "My")
</div>
