@using IsThereAList.Extensions
@using IsThereAList.Models
@model AuthoriseUsersViewModel

@{
    ViewBag.Title = "Authorise Users";
}

<h2>Authorise Users</h2>

@using (Html.BeginForm("AuthoriseUsers", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)
    
    <div class="form-group">
        <!---@Html.LabelFor(m => m.UnauthorisedUsers, new { @class = "col-md-2 control-label" })-->
        <div class="col-md-10">
            @Html.CheckBoxListFor(
                                    m => m.ApplicationUserIds,
                                    new SelectList(Model.UnauthorisedUsers, "Id", "FullName")
                                    //,@cssClass:"form-control"
                                )
            @Html.ValidationMessageFor(m => m.UnauthorisedUsers)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Authorise" />
        </div>
    </div>
}


